#############################################################
# how to exit, logoff, suspend, ...
#############################################################


#Press $mod (super) and X to exit - check toolbar for next choices
bindsym $mod+X mode "$mode_system"
bindsym control+mod1+Delete mode "$mode_system"

set $mode_system (k) lock, (l) logout, (u) suspend, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym k exec --no-startup-id ~/.local/bin/locker.sh, mode "default"
    bindsym l exec --no-startup-id exec i3-msg exit, mode "default"
    bindsym u exec --no-startup-id ~/.local/bin/locker.sh && systemctl suspend, mode "default"
#   bindsym h exec --no-startup-id ~/.config/i3/scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

