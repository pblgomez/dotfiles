#!/usr/bin/env sh

############################################################
# Read by DE's ( source it for the wm )
############################################################


# Default programs:
web_broser=firefox
  export BROWSER=
  xdg-settings set default-web-browser $web_browser.desktop
  export BROWSER=$web_browser
export TERMINAL="kitty"
export EDITOR="nvim"
export READER="zathura"
export FILEBROWSER="lf"

# Envs
[ -f ~/.ssh/envs ] && source ~/.ssh/envs

# PATHS
export PATH+=:~/.local/bin:~/.scripts
export PATH+=:~/Applications
export PATH+=:/snap/bin:/var/lib/snapd/snap/bin
export PATH+=:/var/lib/flatpak/exports/bin
# XDG PATHS
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_DATA_HOME+=:/var/lib/flatpak/exports/share
export LESSHISTFILE=-                           # less
export VSCODE_PORTABLE="$XDG_DATA_HOME"/vscode  # VSCode
export CARGO_HOME="$XDG_DATA_HOME"/cargo        # Rust / Cargo
